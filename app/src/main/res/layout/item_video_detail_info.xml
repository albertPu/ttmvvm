<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>


        <variable
                name="item"
                type="tt.cc.com.ttmvvm.model.page.MovieVo"/>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#44000000"
                android:orientation="vertical"
                android:padding="15dp">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:textColor="@color/backgroundColor"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="@{item.videoName}"/>

                    <TextView
                            android:id="@+id/tv_tag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:textColor="@color/color_lighter_gray"
                            android:textSize="14sp"
                            android:text='@{"#"+item.typeName}'/>

                </LinearLayout>


                <ImageView
                        bindImageUrl="@{item.coverImageUrl}"
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:src="@mipmap/ic_action_down_white"/>

            </RelativeLayout>

            <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_lighter_gray"
                    android:textSize="12sp"
                    android:text="@{item.desc}"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_action_favorites"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:drawableStart="@mipmap/ic_action_favorites"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_lighter_gray"
                        android:text="@{item.discussNumber}"/>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>
